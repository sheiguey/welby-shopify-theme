<div class="product-card">
    <div class="card-inner grid collapse two-columns">
        <div class="card-info product-info-section">
            <a class="product-title" , href="{{product.url}}">
                <h2>
                    {{- product.title }}
                    <span class="price accent-color"> {{- product.price | money_without_trailing_zeros }}</span>
                </h2>
            </a>
            <div class="below-title">
                <p>
                    {{- product.description | strip_html | split:'.' | first | append: '.'}}
                </p>
        
                {% if product.variants.size >= 1 %}
                <span class="accent-color">
                    {{'general.product.card.options' | t: optionCount: product.variants.size}} &ndash;
                </span>
                {% endif %}
        
                {% if product.available %}
                <a href="{{product.url}}">{{'general.product.card.more_info' | t}}</a>
                {% else %}
                <span class="price"> <br><strong>{{'general.product.form.sold_out' | t}}</strong> </span>
                {% endif %}
            </div>
        
        
        </div>
        
        <div class="card-image">
            <a href="{{product.url}}">
                <img src="{{ product.featured_image |  image_url  }}" alt="{{product.featured_image.alt | escape}}"
                    width="" height="" />
            </a>
        </div>
    </div>   
</div>